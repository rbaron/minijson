{
	"version": "2.0.0",
  "options": {
    "cwd": "${workspaceRoot}/build"
  },
  "tasks": [
    {
      "label": "cmake",
      "command": "cmake -G 'Unix Makefiles' -DCMAKE_BUILD_TYPE=Debug ..",
      "type": "shell",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "type": "shell",
      "group": {
        "kind": "build",
        "isDefault": true,
      },
      "label": "make",
      "command": "make -j 8",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared"
      },
      "dependsOn": [
        "cmake"
      ],
      "problemMatcher": []
    },
    {
      "type": "shell",
      "group": {
        "kind": "test",
        "isDefault": true,
      },
      "label": "run",
      "command": "./minijson",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared"
      },
      "dependsOn": [
        // "make"
      ],
      "problemMatcher": []
    }
  ]
}